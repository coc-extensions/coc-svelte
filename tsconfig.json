{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "outDir": "lib",
        "sourceMap": true,
        "composite": true,
        "esModuleInterop": true, // Handles coc type errors
        "skipLibCheck": true // consider unsetting in the future
    },
    "include": ["src"]
}
